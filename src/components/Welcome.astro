---
import logo from '../assets/devindetails.svg';
import background from '../assets/background.svg';
---

<img id="background" src={background.src} alt="" fetchpriority="high" />
<main>
	<section id="hero">
		<a href="https://devindetails.fr"
			><img src={logo.src} width="44" height="50" alt="Dev In Details Homepage" /></a
		>
		<h1>
			Dev In Details
		</h1>
	</section>
</main>

<style>
	#background {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		filter: blur(100px);
	}

	#hero {
		width: 100%;
		display: flex;
		align-items: center;
		flex-direction: row;
		justify-content: center;
		padding: 16px;
	}

	@media screen and (max-width: 768px) {
	
		#hero {
			display: block;
			padding-top: 10%;
		}
	}
</style>
